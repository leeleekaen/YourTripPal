<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:padding="2dp"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cvStdPack"
        android:background="#ffffff"
        android:elevation="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:gravity="center_vertical">

                <TextView
                    android:layout_width="275dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:id="@+id/textViewStdTTProwItem"
                    android:hint="Name"
                    android:textSize="14sp"
                    android:textColor="@color/inputText"
                    android:layout_alignParentLeft="true"
                    android:text="Hi Hello How are you"
                    android:layout_margin="10dp" />
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/checkBoxStdTTProw"
                    android:layout_alignBottom="@+id/textViewStdTTProwItem"
                    android:layout_alignParentRight="true" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>