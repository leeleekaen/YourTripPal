<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_white_fabric_texture">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Cathay Pacific"
        android:id="@+id/textViewRes2addrTitleOrName"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:textSize="18sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewRes2addrTitleOrName"
        android:id="@+id/relativeLayout2addrStart"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="5dp"
        android:background="#b0f0fd"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">

    <TextView
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:text="4:00 PM"
        android:id="@+id/textView2addrStartTime"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:textSize="15sp"
        android:background="#f6fdfe"
        android:gravity="center" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Depart San Francisco"
        android:id="@+id/textView2addrStartPlaceNameAndKind"

        android:layout_toRightOf="@+id/textView2addrStartTime"
        android:layout_toEndOf="@+id/textView2addrStartTime"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textSize="16sp"
        android:layout_marginBottom="5dp" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="San Francisco International Airport Address CA 94128"
        android:id="@+id/textView2addrStartPlaceAddress"
        android:layout_below="@+id/textView2addrStartPlaceNameAndKind"
        android:layout_alignLeft="@+id/textView2addrStartPlaceNameAndKind"
        android:layout_alignStart="@+id/textView2addrStartPlaceNameAndKind"
        android:textSize="14sp"
        android:layout_marginBottom="10dp" />

        <TextView
            android:layout_width="80dp"
            android:layout_height="25dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="3 Aug 2016"
            android:id="@+id/textView2addrStartDate"
            android:layout_below="@+id/textView2addrStartTime"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:textStyle="bold" />
    </RelativeLayout>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_below="@+id/relativeLayout2addrStart"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:id="@+id/relativeLayout2addrEnd"
    android:background="#abfcac"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp">

    <TextView
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:text="3:00 AM"
        android:id="@+id/textView2addrEndTime"
        android:layout_marginLeft="45dp"
        android:background="#f6fdfe"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:gravity="center" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Bangalore International Airport"
        android:id="@+id/textView2addrEndPlaceNameAndKind"
        android:layout_toRightOf="@+id/textView2addrEndTime"
        android:layout_marginLeft="10dp"
        android:textSize="16sp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"/>
    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="San Francisco International Airport Address CA 94128"
        android:id="@+id/textView2addrEndPlaceAddress"
        android:layout_below="@+id/textView2addrEndPlaceNameAndKind"
        android:layout_alignLeft="@+id/textView2addrEndPlaceNameAndKind"
        android:layout_alignStart="@+id/textView2addrEndPlaceNameAndKind"
        android:textSize="14sp"
        android:layout_marginBottom="10dp" />
    <TextView
        android:layout_width="80dp"
        android:layout_height="25dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="4 Aug 2016"
        android:id="@+id/textView2addrEndDate"
        android:layout_below="@+id/textView2addrEndTime"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:textStyle="bold" />


</RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Conf#: 123456789"
        android:id="@+id/textView2addrConfNumber"
        android:layout_below="@+id/relativeLayout2addrEnd"

        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="45dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bring ticket Printouts without fail"
        android:id="@+id/textView2addrNotes"
        android:layout_below="@+id/textView2addrConfNumber"
        android:layout_alignLeft="@+id/textView2addrConfNumber"
        android:layout_alignStart="@+id/textView2addrConfNumber"
        android:layout_marginRight="10dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Add Attachment"
        android:id="@+id/button2addrAttachment"
        android:layout_marginTop="51dp"
        android:layout_below="@+id/textView2addrNotes"
        android:layout_centerHorizontal="true"
        android:background="#3038bf"
        android:textColor="#fffefe"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:visibility="invisible"/>

</RelativeLayout>