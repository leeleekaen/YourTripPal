<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <android.support.v7.widget.CardView
        android:id="@+id/cvBL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="32dp">

        <RelativeLayout
            android:id="@+id/relativeLayoutBLrow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/item_entry_background"
            android:elevation="32dp">

            <CheckBox
                android:id="@+id/checkBoxBLrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:checked="false"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/imageViewBLRowthemeIcon"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="15dp" />
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/textViewBLRowThemeName"
                android:layout_below="@+id/imageViewBLRowthemeIcon"
                android:textColor="@color/inputText"
                android:textSize="14sp"
                android:layout_marginLeft="10dp"
                android:layout_margin="5dp"
                android:gravity="center_horizontal" />

            <TextView
                android:id="@+id/textViewBLRowPlaceName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/imageViewBLRowthemeIcon"
                android:layout_toRightOf="@+id/imageViewBLRowthemeIcon"
                android:text="Switzerland Lucerne Montreal"
                android:textColor="@color/inputText"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewBLRowBestTimeToVisit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewBLRowPlaceName"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="2dp"
                android:layout_toEndOf="@+id/imageViewBLRowthemeIcon"
                android:layout_toRightOf="@+id/imageViewBLRowthemeIcon"
                android:text="Best time to visit: May - Jun"
                android:textColor="@color/inputText"
                android:textSize="16sp" />

            <Button
                android:id="@+id/buttonBLRowStartPlanning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewBLRowBestTimeToVisit"
                android:layout_margin="5dp"
                android:layout_toRightOf="@+id/textViewBLRowThemeName"
                android:background="@drawable/date_button_background"
                android:layout_marginLeft="25dp" />


        </RelativeLayout>


    </android.support.v7.widget.CardView>


</RelativeLayout>