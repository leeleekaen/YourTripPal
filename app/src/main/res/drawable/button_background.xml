<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners
                android:radius="3dip" />
            <stroke
                android:width="1dip"
                android:color="#FF638AFE" />
            <gradient
                android:angle="-90"
                android:startColor="#FF4A77FE"
                android:endColor="#FFE1E8FE"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip"
                android:color="#FF638AFE" />
            <solid android:color="#FF4A77FE"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#FF638AFE" />
            <gradient android:angle="-90"
                android:startColor="#FFE1E8FE"
                android:endColor="#FF4A77FE" />
        </shape>
    </item>
</selector>