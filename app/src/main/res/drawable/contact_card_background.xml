<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners
                android:radius="3dip" />
            <stroke
                android:width="1dip"
                android:color="#FFE4E7E8" />
            <gradient
                android:angle="-90"
                android:startColor="#FFFCFEFF"
                android:endColor="#FFCDCFD0"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip"
                android:color="#FFE4E7E8" />
            <solid android:color="#FFFCFEFF"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#FFD0F2FF" />
            <gradient android:angle="-90"
                android:startColor="#FFCDCFD0"
                android:endColor="#FFFCFEFF" />
        </shape>
    </item>
</selector>